# TourismChatbot environment template

# --- Azure OpenAI chat deployment ---
AZURE_OPENAI_API_KEY=replace-with-chat-api-key
AZURE_OPENAI_ENDPOINT_CHAT=https://your-chat-resource.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-5-chat
AZURE_OPENAI_CHAT_API_VERSION=2024-12-01-preview

# --- Azure OpenAI embeddings deployment ---
AZURE_OPENAI_EMBEDDING_KEY=replace-with-embedding-api-key
AZURE_OPENAI_ENDPOINT=https://your-embedding-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_EMBEDDING_API_VERSION=2024-02-01

# --- Qdrant ---
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=tourism_docs

# --- Data ingestion + retrieval ---
DATA_DIR=C:/path/to/TourismChatbot/backend/data/italy
AUTO_INGEST=true
RETRIEVAL_TOP_K=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_DIMENSION=1536

# --- Misc ---
APP_NAME=Tourism Bot API
CORS_ORIGINS=*
