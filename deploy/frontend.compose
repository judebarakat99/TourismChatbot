services:
  frontend:
    build:
      context: ../frontend
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    environment:
      - NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL:-http://host.docker.internal:8000}
    volumes:
      - ../frontend:/app
      - frontend_node_modules:/app/node_modules
    command: ["npm", "run", "dev"]

volumes:
  frontend_node_modules:
